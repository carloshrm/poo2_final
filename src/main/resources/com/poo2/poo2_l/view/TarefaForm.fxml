<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<TitledPane text="Nova Tarefa:" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.poo2.poo2_l.controllers.view.TarefaFormView">
    <content>
        <GridPane minHeight="200.0" minWidth="400.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="okButton" mnemonicParsing="false" onAction="#onOkAction" text="Criar" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
                <Button fx:id="cancelarButton" mnemonicParsing="false" onAction="#onCancelarAction" text="Cancelar" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
                <Label text="Título:" GridPane.rowIndex="1" />
                <Label text="Descrição:" GridPane.rowIndex="2" />
                <Label text="Data Limite:" GridPane.rowIndex="4" />
                <DatePicker fx:id="dataLimite" promptText="Data Limite" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="fieldTitulo" promptText="De um título à nova tarefa." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextArea fx:id="fieldDesc" prefHeight="200.0" prefWidth="200.0" promptText="Descreva sua tarefa." GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <DatePicker fx:id="dataCriada" editable="false" promptText="Data de criação da tarefa" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Data Criada:" GridPane.rowIndex="3" />
            <Label text="Ao Projeto:" />
            <Label fx:id="tarefaProjetoLabel" text="Label" GridPane.columnIndex="1" />
            </children>
        </GridPane>
    </content>
</TitledPane>
